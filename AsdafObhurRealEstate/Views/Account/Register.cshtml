<div class="container" >

    <form class="custom-form" asp-area="" asp-action="Register" asp-controller="Account" method="post">
        <input asp-for="AccountType" type="hidden" />

    <div class="form-two-col">
        <div class="form-col">
            <label asp-for="FirstName">الاسم الاول</label>
            <input class="custom-form-input" type="text" placeholder="ادخل الاسم الاول هنا" id="firstName" asp-for="FirstName" aria-describedby="firstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-col">
                <label class="form-label" for="lastName" asp-for="LastName">الاسم الثاني</label>
            <input class="custom-form-input" id="lastName" asp-for="LastName" aria-describedby="lastName" type="text" placeholder="ادخل الاسم الاول هنا">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-two-col">
        <div class="form-col">
            <label asp-for="Email">البريد الالكتروني</label>
                <input class="custom-form-input" type="email" id="exampleInputEmail1" asp-for="Email" aria-describedby="emailHelp" placeholder="name@example.com">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        <div class="form-col">
                <label class="form-label" asp-for="Phonenumber">رقم الهاتف</label>
                <input class="custom-form-input" type="number" id="phonenumber" asp-for="Phonenumber" aria-describedby="phoneNumber" placeholder="رقم الهاتف">
                <span asp-validation-for="Phonenumber" class="text-danger"></span>
            </div>
    </div>
    <div class="form-two-col">
        <div class="form-col">
            <label asp-for="Password">كلمة المرور</label>
                <input class="custom-form-input" type="password" id="password" asp-for="Password" aria-describedby="password">
        </div>
        <div class="form-col">
            <label class="form-label" asp-for="ConfirmPassword"> أعد كتابة كلمة المرور</label>
                <input class="custom-form-input" type="password" id="confirmPassword" asp-for="ConfirmPassword" aria-describedby="confirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
    </div>
    <div class="form-two-col">
        <div class="form-col">
            <label asp-for="DepartmentId">أختر القسم</label>
                <select class="custom-form-input custom-select" asp-for="DepartmentId" asp-items="ViewBag.departments">
                    <option value="-1" disabled>اختار القسم المناسب</option>
            </select>
        </div>
        <div class="form-col custom-form-btn-container">
            <button class="custom-form-btn custom-form-input btn btn-primary m-0" type="submit">أدخل</button>
        </div>
    </div>
</form>
</div>


