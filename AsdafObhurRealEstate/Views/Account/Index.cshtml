            </tr>
          </thead>
          <tbody>
                    @foreach(var record in Model)
                    {
                        <tr>
                          <td>
                            <div class="d-flex px-2">
                              <div class="my-auto">
                                <h6 class="mb-0 text-xs">@record.FirstName @record.LastName</h6>
                              </div>
                            </div>
                          </td>
                          <td>
                            <p dir="rtl" class="text-xs font-weight-normal mb-0">@record.PhoneNumber</p>
                          </td>
                          <td class="align-middle">
                              <a class="text-secondary font-weight-bold text-xs" asp-area="" asp-action="SpecificUser" asp-controller="Account" asp-route-id="@record.Id">
