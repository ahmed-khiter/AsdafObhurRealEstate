                             <a class="text-secondary font-weight-bold text-xs" href="">
                            <span class="material-symbols-outlined">
                              <i title="تفاصيل" class="material-icons-round opacity-10" onclick="del(event,@record.ClientId)">delete</i>
                            </span>
                          </a>
                      </td>
                </tr>

                }
      </tbody>
    </table>
  </div>
  </div>





