@model DetailsClientDTO
@inject UserManager<BaseUser> userManager
@{
    ViewData["Title"] = "تفاصيل العميل";
    var user = await userManager.GetUserAsync(User);
    bool isFinancialUser = await userManager.IsInRoleAsync(user, Role.Financial);

    var i = 0;
    int newFileId = 0;
}

<!-- bootstrab table -->
<form asp-area="" asp-controller="client" asp-action="SavedFileAboutClient" enctype="multipart/form-data" >
    <input type="hidden" asp-for="ClientId" />
    <div>
        <div class="client-info">
            <h3 class="mb-3">المعلومات الرئيسية</h3>
            <div class="client-info-container row">
                <div class="client-info-box col bg-primary text-light m-2">
                    <h4 class="text-light m-0">اسم العميل</h4>
                   <h3 class="m-0 text-light"> <strong class="info-label fs-4">@Model.ClientName</strong> </h3>
                </div>
                <div class="client-info-box col bg-secondary text-light m-2">
                    <h4 class="text-light m-0">رقم الهاتف</h4>
                    <h3 class="m-0 text-light"> <strong class="info-label fs-4">@Model.PhoneNumber</strong> </h3>
                </div>
                <div class="client-info-box col bg-secondary text-light m-2">
                    <h4 class="text-light m-0">العنوان</h4>
                    <h3 class="m-0 text-light"> <strong class="info-label fs-4">@Model.Address</strong> </h3>
                </div>
            </div>

              <div class="client-info-container row">
                <div class="client-info-box col bg-primary text-light m-2">
                    <h4 class="text-light m-0">تفاصيل احتياج العميل</h4>
                   <h3 class="m-0 text-light"> <strong class="info-label fs-4">@Model.CustomerNeeded</strong> </h3>
                </div>
                <div class="client-info-box col bg-secondary text-light m-2">
                    <h4 class="text-light m-0">تم انشاء الملف بواسطه</h4>
                    <h3 class="m-0 text-light"> <strong class="info-label fs-4">@Model.CreatedBy</strong> </h3>
                </div>
                <div class="client-info-box col bg-secondary text-light m-2">
                    <h4 class="text-light m-0">تم التعامل مع الملف بواسطه</h4>
                    <h3 class="m-0 text-light"> <strong class="info-label fs-4">@Model.HandledBy</strong> </h3>
                </div>
            </div>


            <div class="client-info-container row ">
                <div class="client-info-box client-notes col-lg-8 bg-secondary text-light m-2">
                    <strong class="info-label">ملاحظات</strong>
                    <input class="client-notes-input text-end text-light fs-5 pe-2" asp-for="Notes" value="@Model.Notes" />
                </div>

               
                <div class=" d-flex  justify-content-around client-control col-lg-3 m-2">
                    @if(!string.IsNullOrEmpty(Model.BillsFileOld))
                    {

                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <button data-id="@Model.ClientId" class="btn btn-primary fs-4">
                                    <i class="fas fa-download"></i>
                            </button>
                            <label class="fs-6 fw-bold">عرض الفاتورة الحالية</label>
                        </div>
                    }
                    @if (isFinancialUser){
                        <div class="btn-absoulte-for-upload d-flex flex-column justify-content-center align-items-center">
                            <input type="file" class="hidden-file-input" />
                            <button type="button" asp-for="BillsFileNew" class="btn btn-primary fs-4">
                                <i class="fas fa-upload"></i>
                            </button>
                            <label class="fs-6 fw-bold">رفع فاتورة</label>
                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="mt-4">
            <h3 class="mb-3"> ملفات اخرى</h3>

            <table class="table table-secondary">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">الملف</th>
                        <th scope="col">وصف الملف</th>
                        <th scope="col">اضافة</th>
                        <th scope="col">مسح</th>
                    </tr>
                </thead>
                <tbody id="appendNewFile">
                    @foreach(var item in Model.OldOtherFiles)
                    {
                        <tr>
                            <th scope="row">@(++i)</th>
                            <td>@item.FileOld</td>
                            <td> <a data-id="@item.OtherFileId">@item.Description</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                    
                    }

                    <tr class="table-primary">
                        <th scope="row">@(++i)</th>
                        <td>
                            <input class="test" id="hasFile-@i" asp-for="NewOtherFiles[newFileId].NewFile" type="file">
                        </td>
                        <td>
                            <input id="hasDescription-@i" asp-for="NewOtherFiles[newFileId].Description" type="text">
                        </td>
                        <td>
                            <button id="remove-@i" type="button" class="add-new-otherFile btn btn-primary table-add-btn">
                                <i class="fas fa-plus-circle fs-6"></i>
                            </button>
                        </td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row justify-content-center">
            <div class="d-flex col justify-content-center">
                <button class="btn btn-primary">حفظ التعديلات</button>
            </div>
            @if (isFinancialUser){
                <div class="d-flex col justify-content-center">
                    <a class="btn btn-secondary">انهاء الملف</a>
                </div>
            }
            else{
                <div class="d-flex col justify-content-center">
                    <a id="" class="btn btn-secondary">تحويل الي المالية</a>
                </div>
            }

            <div class="d-flex col justify-content-center">
                <a asp-area="" asp-controller="client" asp-action="index" class="btn btn-secondary">ارجاع الي القائمة</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    <script>
    
        var currentIndex = @(++i);
        var ids = @i;

        $(document).ready(function () {
            $(document).on("click", "#selectDepartment", function () {
                var subCat = this;
                $.ajax({
                    url: "GetUsersByDepartmentId?departmentId=" + $(subCat).val(),
                    type: "GET",
                    contentType: "application/json; charset=utf-8",
                    datatype: JSON,
                    success: function (result) {
                        debugger;
                        var users = '<option selected disabled value="0">اختار الموظف</option>';
                        $(result).each(function () {
                            users = users + '<option value="' + this.id + '">' + this.value + '</option>'
                        });
                        var subCateList = $("#selectUsers");
                        subCateList.empty();
                        subCateList.append()
                        subCateList.append(users);
                    },
                    error: function (data) {
                        return "Error";
                    }
                });
            });
        });

        $(document).on("click", ".add-new-otherFile", function () {

            let idOfFile = `hasFile-${ids}`;
            let idOfDescriptions = `hasDescription-${ids}`;

            let file = document.getElementById(`${idOfFile}`).value;

            let descriptions = document.getElementById(`${idOfDescriptions}`).value;

            console.log(file)
            console.log(descriptions)

            if (file!== ''  && descriptions !== '') {

                let removeId = "remove-" + ids;


                let removeButton = document.getElementById(removeId);

                removeButton.removeChild(removeButton.lastElementChild);

                removeButton.remove();

                $("#appendNewFile").append(`
                    <tr class="table-primary">
                        <th scope="row">${currentIndex}</th>
                        <td>
                            <input type="file" id="hasFile-${ids}" name="NewOtherFiles[${ids}].NewFile" >
                        </td>
                        <td>
                            <input id="hasDescription-${ids}" name="NewOtherFiles[${ids}].Description" type="text">
                        </td>
                        <td>
                            <button  id="remove-${ids}" type="button" class="add-new-otherFile btn btn-primary table-add-btn">
                                <i class="fas fa-plus-circle fs-6"></i>
                            </button>
                        </td>
                        <td>
                            <button id="delete-${ids}" style="background-color:darkred"  type="button" class="add-remove-row btn btn-primary table-add-btn">
                                <i class="fas fa-minus-circle fs-6"></i>
                            </button>
                        </td>
                    </tr>
         
            `);
            
            currentIndex+=1;
            ids+=1;

            }
            else{
                Swal.fire(
                    'يجب اختيار الملف و كتابة تفاصيل له.'
                )
            }


        });
</script>
}

